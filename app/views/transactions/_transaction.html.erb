<tr>
  <td class="transaction">
    <span class="content"><b>Transaction Name: </b><%= transaction.name %></span><br/>
    <span class="content"><b>Description: </b><%= transaction.description %></span><br/>
    <span class="content"><b>Account: </b><%= transaction.accounttype %></span><br/>
    <span class="content"><b>Amount: $</b><%= transaction.amount %></span><br/><br/>
    <span class="timestamp">
      Posted <%= time_ago_in_words(transaction.created_at) %> ago.
    </span>
  </td>
  <% user = transaction.user rescue User.find(transaction.user_id) %>
  <% if current_user?(user) %>
    <td>
      <%= link_to "delete", transaction, :method => :delete,
                                       :confirm => "You sure?",
                                       :title => transaction.name %>
    </td>
  <% end %>
</tr>